<h1>Editing pizza</h1>

<%= form_for @pizza do |f| %>
  Name: <%= f.text_field :name %><br />

  <div>
    <h4>Toppings:</h4>
    <% Topping.all.each do |topping| %>
      <%= check_box_tag "pizza[topping_ids][]", topping.id, f.object.toppings.include?(topping) %>

      <%= topping.name %>
      <br />
    <% end %>
  </div>

  <%= f.submit %>
<% end %>

<br>

<div>
  <%= link_to "Show this pizza", @pizza %> |
  <%= link_to "Back to pizzas", pizzas_path %>
</div>
