<h1>New pizza</h1>

<% if @pizza.errors.any? %>
  <% @pizza.errors.full_messages.each do |message|%>
  <h3><%= message %> </h3>
  <%end%>
<%end%>
</br>

<%= form_for :pizza do |f| %>
  Name: <%= f.text_field :name %><br />

  <div>
    <% Topping.all.each do |topping| %>
      <%= check_box_tag "pizza[topping_ids][]", topping.id %>

      <%= topping.name %>
      <br />
    <% end %>
  </div>

  <%= f.submit %>
<% end %>

<br>

<div>
  <%= link_to "Back to pizzas", pizzas_path %>
</div>
